{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./lib",
    "rootDirs": [
      "./src"
    ],
    "lib": [
      "dom",
      "es2017"
    ],
    "types": [
      "node",
      "jest"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": false,
    "declaration": true,
    "listFiles": false,
    "traceResolution": false,
    "newLine": "LF",
    "noEmitOnError": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "listEmittedFiles": false
  },
  "include": [
    "./types/**/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/__tests__/*.ts"
  ]
}
